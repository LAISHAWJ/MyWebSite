{{> navigation }}

<div class="container">
    <h1>Series Favoritas</h1>
    <div class="row">
        {{#each Series}}
        <div class="col-md-6 mb-4">
            <div class="card">
                <img src="{{CaratulaUrl}}" class="card-img-top" alt="{{Nombre}}">
                <div class="card-body">
                    <h4 class="card-title">{{Nombre}}</h4>
                    <p class="card-text">{{Descripcion}}</p>
                    <iframe src="{{TrailerUrl}}" class="embed-responsive-item" allowfullscreen></iframe>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>